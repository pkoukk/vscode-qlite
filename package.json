{
  "name": "vscode-qlite",
  "version": "1.5.5",
  "publisher": "Vi-brance",
  "engines": {
    "vscode": "^1.77.0"
  },
  "license": "GPL-3.0",
  "displayName": "VSCode-QLite",
  "description": "Chat in QQ while coding",
  "categories": [
    "Other"
  ],
  "keywords": [
    "qq",
    "icqq",
    "chat"
  ],
  "activationEvents": [
    "onView:qlite"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "qlite.setting",
        "icon": "$(settings-gear)",
        "title": "设置"
      },
      {
        "command": "qlite.search",
        "icon": "$(search)",
        "title": "搜索"
      },
      {
        "command": "qlite.removeMsg",
        "icon": "$(close)",
        "title": "删除消息"
      },
      {
        "command": "qlite.profile",
        "title": "查看资料"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "qlite",
          "title": "QLITE",
          "icon": "ico.ico"
        }
      ]
    },
    "views": {
      "qlite": [
        {
          "id": "loginView",
          "name": "LOGIN",
          "type": "webview",
          "when": "!qlite.isOnline"
        },
        {
          "id": "contactView",
          "name": "CONTACT",
          "type": "tree",
          "when": "qlite.isOnline"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "qlite.setting",
          "when": "view == contactView && qlite.isOnline",
          "group": "navigation@1"
        },
        {
          "command": "qlite.search",
          "when": "view == contactView && qlite.isOnline",
          "group": "navigation@0"
        }
      ],
      "view/item/context": [
        {
          "command": "qlite.removeMsg",
          "group": "inline",
          "when": "viewItem =~ /message/"
        },
        {
          "command": "qlite.profile",
          "when": "viewItem =~ /leaf/"
        }
      ]
    },
    "configuration": [
      {
        "title": "QLite",
        "properties": {
          "qlite.platform": {
            "description": "登录时使用的设备类型，重启扩展生效",
            "type": "string",
            "enum": [
              "Android",
              "aPad",
              "Watch",
              "iMac",
              "iPad",
              "Tim"
            ],
            "enumDescriptions": [
              "",
              "功能有限，不建议使用",
              "功能有限，不建议使用",
              "",
              "",
              "此协议无法设置在线状态"
            ],
            "default": "Android"
          }
        }
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Vi-brance/vscode-qlite.git"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.2.2",
    "dayjs": "^1.11.9",
    "google-auth-library": "^9.0.0",
    "googleapis": "^124.0.0",
    "icqq": "^0.4.12",
    "keytar": "^7.9.0",
    "mime-types": "^2.1.35",
    "server-destroy": "^1.0.1",
    "stream-mime-type": "^2.0.0",
    "vscode-messenger": "^0.4.5",
    "vscode-messenger-common": "^0.4.5",
    "vscode-messenger-webview": "^0.4.5",
    "xss-filters": "^1.2.7"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mime-types": "^2.1.1",
    "@types/node": "^20.2.5",
    "@types/vscode": "^1.77.0",
    "@types/vscode-webview": "^1.57.1",
    "@types/xss-filters": "^0.0.27",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/codicons": "^0.0.33",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.3",
    "css-minimizer-webpack-plugin": "^5.0.0",
    "eslint": "^8.40.0",
    "glob": "^8.0.3",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.7.5",
    "terser-webpack-plugin": "^5.3.7",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "webpack": "^5.85.1",
    "webpack-cli": "^5.1.3"
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "package": "node --max_old_space_size=5129 node_modules/webpack/bin/webpack.js --mode production --devtool hidden-source-map",
    "build": "webpack --mode none",
    "watch": "webpack --mode development --watch",
    "lint": "eslint src --ext ts"
  },
  "icon": "ico.ico"
}
